<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="thanhhai.com.toeicpractice">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Splash screen -->
        <activity
            android:name="thanhhai.com.toeicpractice.SplashScreen.SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="thanhhai.com.toeicpractice.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="thanhhai.com.toeicpractice.ViewPager.ScreenSlideActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="thanhhai.com.toeicpractice.CheckAnswer.TestDoneActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="thanhhai.com.toeicpractice.DataVocabulary.VocabularyActivity"
            android:screenOrientation="portrait" />

        <service android:name="thanhhai.com.toeicpractice.FCM.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name="thanhhai.com.toeicpractice.FCM.MyFirebaseIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity android:name="thanhhai.com.toeicpractice.HomeModel.QuestionActivity" />
        <activity android:name="thanhhai.com.toeicpractice.HomeModel.MusicsActivity" />
        <activity android:name="thanhhai.com.toeicpractice.HomeModel.TestVocabularyActivity" />
        <activity android:name="thanhhai.com.toeicpractice.ViewPager.VocabularySlideActivity" />
        <activity android:name="thanhhai.com.toeicpractice.HomeModel.GrammarActivity"></activity>
    </application>

</manifest>